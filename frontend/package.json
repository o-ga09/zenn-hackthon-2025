{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "type-check": "tsc --noEmit",
    "format": "prettier --check \"src/**/*.{ts,tsx}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prisma:generate": "prisma generate --schema=./schemes/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=./schemes/prisma/schema.prisma",
    "db:up": "docker compose up -d db",
    "db:down": "docker compose down -v",
    "db:migrate": "sql-migrate up",
    "db:seed": "node scripts/seed.js",
    "db:reset": "pnpm db:down && pnpm db:up && pnpm db:migrate && pnpm db:seed"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.2",
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "^6.16.1",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@tanstack/react-query": "^5.87.4",
    "axios": "^1.12.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^12.2.1",
    "framer-motion": "^12.23.12",
    "hono": "^4.9.6",
    "lucide-react": "^0.543.0",
    "next": "15.5.2",
    "nextjs-toploader": "^3.9.17",
    "prisma": "^6.16.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "shadcn": "^3.2.1",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5"
  }
}
